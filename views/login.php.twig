{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

<div class="row">

  <!-- Blog Entries Column -->
  <div class="col-md-6">
  <form class="form-signin" action="" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" name="name" class="form-control" placeholder="Email address" required="" autofocus="">
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="text" name="pass" id="inputPassword" class="form-control" placeholder="Password" required="">
      <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Sign in</button>
  </form>
  </div>
</div>
</div>
{% endblock %}